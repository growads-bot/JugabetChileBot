from aiogram import Bot, Dispatcher, executor, types
import logging

logging.basicConfig(level=logging.INFO)

BOT_TOKEN = "8180281549:AAE0Iad85i0vmzuTBRYWKZgPdRVFwJF6vjE"

bot = Bot(token=BOT_TOKEN)
dp = Dispatcher(bot)

# /start — показує кнопку "🎁 Ver Bonos"
@dp.message_handler(commands=['start'])
async def start_handler(message: types.Message):
    keyboard = types.InlineKeyboardMarkup()
    keyboard.add(
        types.InlineKeyboardButton("🎁 Ver Bonos", callback_data="ver_bonos")
    )
    await message.answer("¡Bienvenido a Jugabet Chile!\nPulsa el botón para ver los bonos disponibles.", reply_markup=keyboard)

# Коли натискають "🎁 Ver Bonos" — показати три бонуси
@dp.callback_query_handler(lambda c: c.data == "ver_bonos")
async def show_bonuses(callback_query: types.CallbackQuery):
    keyboard = types.InlineKeyboardMarkup(row_width=1)
    keyboard.add(
        types.InlineKeyboardButton("🎰 Bono Slots", url="https://track.juga.live/4b8d7b48-284a-41ba-a007-9cb52694ddfb"),
        types.InlineKeyboardButton("🏅 Bono Deportes", url="https://track.juga.live/563eed25-d153-40cd-89f0-16c9979790ce"),
        types.InlineKeyboardButton("🎲 Bono Live Casino", url="https://track.juga.live/0cf84ef0-4180-4e81-a8fb-7a18e437aabe")
    )
    await bot.answer_callback_query(callback_query.id)
    await bot.send_message(callback_query.from_user.id, "Elige tu bono:", reply_markup=keyboard)

if __name__ == '__main__':
    executor.start_polling(dp, skip_updates=True)
