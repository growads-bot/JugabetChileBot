@dp.callback_query_handler(lambda c: c.data == "ver_bonos")
async def show_bonuses(callback_query: types.CallbackQuery):
    keyboard = types.InlineKeyboardMarkup(row_width=1)
    keyboard.add(
        types.InlineKeyboardButton("ğŸ° Bono Slots", url="https://track.juga.live/4b8d7b48-284a-41ba-a007-9cb52694ddfb"),
